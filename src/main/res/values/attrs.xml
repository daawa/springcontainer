<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sizeAspect" format="float"/>

    <declare-styleable name="RefreshableListView">
        <attr name="enableEmptyView" format="boolean"/>
        <attr name="columnWidth" format="dimension"/>

        <attr name="springEnabled" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="BannerIndicator">
        <attr name="itemIsHollow" format="boolean" />
        <attr name="itemCount" format="integer" />
        <attr name="itemColor" format="reference|color" />
        <attr name="itemBgColor" format="reference|color" />
        <attr name="itemSize" format="dimension" />
        <attr name="itemMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="raw_src" format="reference" />
        <attr name="scale_mode" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="fitxy" value="3" />
        </attr>
    </declare-styleable>

</resources>